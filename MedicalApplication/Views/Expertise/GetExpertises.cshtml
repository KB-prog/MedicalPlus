@model IEnumerable<MedicalApplication.Data.Model.Domain.Expertise>

@{
    ViewBag.Title = "GetExpertises";
}

<style>
    .stylecontainer {
        margin: 2%;
        margin-top: 5%;
    }
</style>

<h2 class="stylecontainer">Expertises</h2>

<p class="stylecontainer">
    @Html.ActionLink("Add Expertise", "AddExpertise")
</p>
<table class="table stylecontainer">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ExpertiseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExpertiseDescription)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ExpertiseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpertiseDescription)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditExpertise", new { id = item.ExpertiseID }, new { @class = "btn btn-success" }) |
                @*@Html.ActionLink("Details", "Details", new { id=item.ExpertiseID }) |*@
                @Html.ActionLink("Delete", "DeleteExpertise", new { expertiseId = item.ExpertiseID, Controller = "Expertise" }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>